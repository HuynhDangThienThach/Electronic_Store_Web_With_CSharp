@using Electronic_Store_Web_Online.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- banner -->
<div class="banner banner10">
    <div class="container">
        <h2 style=" color: #fff; font-size: 3em; text-align: center; padding: 1.5em 0 0;">Bài viết</h2>
    </div>
</div>
<!-- breadcrumbs -->
<div class="breadcrumb_dress" style=" height: 50px;background: #c2c2c2;">
    <div class="container" style=" margin-top: 8px;">
        <ul>
            <li><a href='@Url.Action("Index", "Index")'><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a> <i>/</i></li>
            <li>Bài viết</li>
        </ul>
    </div>
</div>
<!-- //breadcrumbs -->
<div class="blog">
    <div class="container ">
        <div class="row">
            <div class="col-xl-12">
                <div class="text-center " style="margin-top: 20px; margin-bottom:36px;">
                    <div class="container ">
                        <h1>Bài viết về chúng tôi</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                @{
                    foreach (BaiViet k in Common.getArticles(8))
                    {
                        <div class="col-xl-6 col-md-6" style="margin-bottom: 10px; height: 445px;">
                            <div class="w3agile_special_deals_grid_left_grid" style="margin-top: 20px; margin-bottom:15px;">
                                <img src="@k.hinhDD" class="img-responsive " alt="" style="height: 250px" />
                            </div>
                            <div class="content">
                                <div class="start-date" style="margin-top: 20px; margin-bottom:15px;">
                                    <p style="font-size: 16px">@String.Format("{0: MMMM dd yyyy}", k.ngayDang) in <a href="#">@(k.loaiTin.Equals("TT")? "Tin tức" : "Quảng Cáo")</a> <a style="margin-left:250px" href="@Url.Action("Index","BlogsContent",new {maBv = k.maBV})">Tìm hiểu thêm -></a></p>
                                </div>
                                <div class="blog" style="margin-top: 20px; margin-bottom:15px;">
                                    <h3><a href="@Url.Action("Index","BlogsContent",new {maBv = k.maBV})">@k.tenBV</a></h3>
                                </div>
                                <p class="blog" style="margin-top: 20px; margin-bottom:100px;">
                                    @k.ndTomTat
                                </p>
                            </div>
                        </div>
                    }
                }

            </div>
            <div class="clearfix"></div>

        </div>
        <div class="clearfix"> </div>
    </div>
</div>
<!-- new-products -->
<div class="w3l_related_products">
    <div class="container">
        <h3>Bài viết tương tự</h3>
        <ul id="flexiselDemo2">
            @{ //Khởi tạo biến e để tạo ra bài viết cần minh họa

                foreach (BaiViet k in Common.getArticles(6))
                {
                    <li>
                        <div class="w3l_related_products_grid">
                            <div class="agile_ecommerce_tab_left mobiles_grid">
                                <div>
                                    <img style="height: 150px" src="@k.hinhDD" alt="@k.maBV " class="img-responsive" />
                                </div>
                                <div class="start-date" style="margin-top: 20px; margin-bottom:15px;">
                                    <p style="font-size: 16px">@String.Format("{0: MMMM dd yyyy}", k.ngayDang) in <a href="#">@(k.loaiTin.Equals("TT")? "Tin tức" : "Quảng Cáo")</a> </p>
                                </div>
                                <h5><a href="@Url.Action("Index", "BlogsContent", new {maBv = k.maBV}) ">@k.tenBV</a></h5>
                                <div><a style="text-align:center" href="@Url.Action("Index","BlogsContent",new {maBv = k.maBV})">Tìm hiểu thêm -></a></div>
                            </div>
                        </div>
                    </li>

                }
            }
        </ul>
        <script type="text/javascript">
            $(window).load(function () {
                $("#flexiselDemo2").flexisel({
                    visibleItems: 4,
                    animationSpeed: 1000,
                    autoPlay: true,
                    autoPlaySpeed: 3000,
                    pauseOnHover: true,
                    enableResponsiveBreakpoints: true,
                    responsiveBreakpoints: {
                        portrait: {
                            changePoint: 480,
                            visibleItems: 1
                        },
                        landscape: {
                            changePoint: 640,
                            visibleItems: 2
                        },
                        tablet: {
                            changePoint: 768,
                            visibleItems: 3
                        }
                    }
                });

            });
        </script>
        <script type="text/javascript" src="~/Scripts/jquery.flexisel.js"></script>
    </div>
</div>
<!-- //new-products -->
<!-- newsletter -->
<div class="newsletter">
    <div class="container">
        <div class="col-md-6 w3agile_newsletter_left">
            <h3>Newsletter</h3>
            <p>Excepteur sint occaecat cupidatat non proident, sunt.</p>
        </div>
        <div class="col-md-6 w3agile_newsletter_right">
            <form action="#" method="post">
                <input type="email" name="Email" placeholder="Email" required="">
                <input type="submit" value="" />
            </form>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
<!-- //newsletter -->
